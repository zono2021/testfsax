<div class="main users-new">
  <div class="container">
    <div class="form-heading">管理者ログイン</div>
    <div class="form users-form">
      <div class="form-body">
        <% if flash[:errors] %>
            <div class="form-error">
                <%= flash[:errors] %>
            </div>
        <% end %>
        <%= form_with url:'/adlogin' do %>
            <p>ID</p>
            <input name="admin_user">
            <p>パスワード</p>
            <input type="password" name="admin_password">
            <input type="submit" value="ログイン">
        <% end %>
       </div>
    </div>
  </div>
  <div class="top-menu">
        <%= link_to("管理者登録はこちら","/adsignup") %>
      </div>
</div>